<%= form_for [@post, Comment.new], remote: true do |f| %> <!-- do i need to change [post, post.comments.new] at all? refer to checkpoint 58 'Ajaxifying the Form' -->
  <% if @comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(@comment.errors.count, "error") %>.</h4>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(Comment.new.errors[:body]) do %>
    <h3>Add a comment</h3>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter comment" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "Create Comment", class: 'btn btn-default' %>
  </div>
<% end %>